if [ -d "$SSO/lib/nerd-fonts" ]
then
    echo "Nerd Fonts is not installed.\n"
    while true; do
        read -p "Do you Install Nerd Fonts? [Y/N]" ans
        case $ans in
            [Yy]*)
                source $SSO/lib/install_font.sh
                return
                ;;
            [Nn]*)
                echo "Skipping install..."
                return
        esac
        echo "Please answer again."
    done
fi
cd $SSO/lib/nerd-fonts && git pull && ./install.sh
